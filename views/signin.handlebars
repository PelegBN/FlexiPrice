<!-- views/signin.handlebars -->

<section id="wrapper2">
  <a href="/"><article id="logo_login"></article></a>

  <section id="signinSection">
   
    <form id="local-sign-in" action="/login" method="post">
      <input type="text" name="email" placeholder="Email" required class="signinInput"/>
      
      <p></p>
      <input type="password" name="password" placeholder="Password" required class="signinInput"/>
      
      
      
      <input type="submit" class="btn btn-primary btn-sm subBtn" value=""/>
      
    </form>
    <p></p>
    <div id="local">
      <a href="/local-reg" class="regBtn" role="button">Register</a>
      <br>
      <a href="/forgot" class="forgotBtn" role="button">Forgot Password?</a>
      
    </div>


  </section>

</section>